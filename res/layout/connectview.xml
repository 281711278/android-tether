<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/connectView"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
    <LinearLayout android:id="@+id/connectTextLayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#FF202020"> 
	    <TextView android:id="@+id/connectHeaderText"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:text="@string/connect_header"
	        android:textSize="20sp"
	        android:textColor="#FFFFFF" />
	    <ImageView
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content" />
	    <TextView android:id="@+id/connectMoreText"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_margin="10dp"
	        android:text="@string/connect_more"
	        android:textSize="16sp"
	        android:textColor="#FFFFFF"
	        android:background="#FF202020" />
    </LinearLayout>
    <EditText android:id="@+id/postEditor"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/connectTextLayout"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:inputType="textMultiLine"
        android:focusable="true"
        android:textStyle="bold" />
    <RelativeLayout android:id="@+id/confirmPostLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/postEditor"
        android:layout_centerHorizontal="true">        
	    <TextView android:id="@+id/autoPostText"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_centerVertical="true"
	        android:layout_marginRight="10dp"
	        android:textSize="15sp"
	        android:text="@string/auto_post_text" />
	    <CheckBox android:id="@+id/autoPostCheck"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_centerVertical="true"
	        android:layout_toRightOf="@id/autoPostText"
	        android:checked="true" />
    </RelativeLayout>
    <LinearLayout android:id="@+id/connectList"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/confirmPostLayout"
        android:layout_marginTop="10sp" >
        <Button android:id="@+id/connectFacebook"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/connect_facebook"
            android:textSize="30sp"
            android:textColor="#FFFFFF"
            android:color="#707070"
            android:drawableLeft="@drawable/connect_facebook"
            android:drawableRight="@android:drawable/ic_menu_add" 
            />         
    </LinearLayout>       
</RelativeLayout>
